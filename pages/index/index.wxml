<!--index.wxml-->
<view class="container">
  <view class="locaInfo">
    <swiper indicator-dots:true>
      <swiper-item>1</swiper-item>
      <swiper-item>2</swiper-item>
      <swiper-item>3</swiper-item>
    </swiper>
  </view>
  <view class="mapWrapper">
    <map id='myMap'
    latitude='{{lat}}' 
    longitude='{{lng}}'
    show-location 
    polyline="{{polyline}}"
    scale='{{scale}}'
    enable-scroll='{{false}}'
    >
      <!-- 定位标志 -->
      <cover-view class="iconLoca" bindtap='move2CurrentPos'>
        <cover-image src='../../img/location.png'></cover-image>
      </cover-view>
    </map>
  </view>
</view>